{
  "workflow_name": "LBM Relighting Workflow",
  "description": "Environment-aware relighting using LBM (Lighting Background Model) to transfer lighting from background to foreground subject. Perfect for before/after lighting effects.",
  "version": "1.0.0",
  "author": "ProLight AI",
  "nodes": {
    "1": {
      "class_type": "LoadImage",
      "inputs": {
        "image": "{{background_image}}"
      },
      "title": "Load Background",
      "description": "Background image with desired lighting environment"
    },
    "2": {
      "class_type": "LoadImage",
      "inputs": {
        "image": "{{foreground_subject}}"
      },
      "title": "Load Subject",
      "description": "Foreground subject to relight"
    },
    "3": {
      "class_type": "LoadLBMModel",
      "inputs": {
        "model_name": "lbm_relighting_v2.safetensors"
      },
      "title": "Load LBM Model",
      "description": "Loads LBM (Lighting Background Model) for relighting"
    },
    "4": {
      "class_type": "LBM_Extract_Lighting",
      "inputs": {
        "background_image": ["1", 0],
        "extract_ambient": true,
        "extract_directional": true,
        "extract_color": true
      },
      "title": "Extract Lighting",
      "description": "Extracts lighting information from background image"
    },
    "5": {
      "class_type": "LBM_Apply_Relighting",
      "inputs": {
        "foreground_image": ["2", 0],
        "lighting_data": ["4", 0],
        "lbm_model": ["3", 0],
        "intensity": 1.0,
        "preserve_shadows": true,
        "blend_mode": "natural"
      },
      "title": "Apply Relighting",
      "description": "Applies extracted lighting to foreground subject"
    },
    "6": {
      "class_type": "FIBO_Lighting_Override",
      "inputs": {
        "image": ["5", 0],
        "lighting_json": "{{lighting_override}}",
        "override_strength": 0.7
      },
      "title": "FIBO Lighting Override",
      "description": "Optional: Apply precise FIBO lighting controls on top of LBM relighting"
    },
    "7": {
      "class_type": "ImageComposite",
      "inputs": {
        "image1": ["6", 0],
        "image2": ["1", 0],
        "mask": ["8", 0],
        "method": "normal"
      },
      "title": "Composite Scene",
      "description": "Composites relit subject back into background"
    },
    "8": {
      "class_type": "MaskFromSubject",
      "inputs": {
        "foreground_image": ["2", 0],
        "method": "automatic"
      },
      "title": "Generate Mask",
      "description": "Generates mask for subject compositing"
    },
    "9": {
      "class_type": "ColorMatch",
      "inputs": {
        "image": ["7", 0],
        "reference": ["1", 0],
        "strength": 0.3
      },
      "title": "Color Match",
      "description": "Matches colors between subject and background"
    },
    "10": {
      "class_type": "SaveImage",
      "inputs": {
        "filename_prefix": "lbm_relit",
        "images": ["9", 0]
      },
      "title": "Save Result"
    },
    "11": {
      "class_type": "SaveImage",
      "inputs": {
        "filename_prefix": "lbm_before",
        "images": ["2", 0]
      },
      "title": "Save Before"
    }
  },
  "links": [
    [1, 0, 4, 0],
    [1, 0, 7, 1],
    [1, 0, 9, 1],
    [2, 0, 5, 0],
    [2, 0, 8, 0],
    [2, 0, 11, 0],
    [3, 0, 5, 2],
    [4, 0, 5, 1],
    [5, 0, 6, 0],
    [6, 0, 7, 0],
    [7, 0, 9, 0],
    [8, 0, 7, 2],
    [9, 0, 10, 0]
  ],
  "extra": {
    "ds": {
      "scale": 0.9,
      "offset": [0, 0]
    }
  },
  "metadata": {
    "supports_before_after": true,
    "environment_aware": true,
    "lighting_transfer": true,
    "compatible_with_fibo": true
  }
}

