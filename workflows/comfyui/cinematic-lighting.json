{
  "workflow_name": "Cinematic Lighting with FluxKontextPro",
  "description": "Advanced cinematic lighting using FluxKontextPro node for atmosphere and mood control. Supports style prompts like 'Wong Kar-wai lighting' for artistic control.",
  "version": "1.0.0",
  "author": "ProLight AI",
  "nodes": {
    "1": {
      "class_type": "FluxKontextPro",
      "inputs": {
        "prompt": "{{subject_description}}",
        "lighting_style": "{{lighting_style}}",
        "atmosphere": "{{atmosphere}}",
        "mood": "{{mood}}",
        "cinematic_ratio": 2.35,
        "color_grade": "cinematic"
      },
      "title": "FluxKontextPro",
      "description": "Advanced lighting and atmosphere control for cinematic results"
    },
    "2": {
      "class_type": "CheckpointLoaderSimple",
      "inputs": {
        "ckpt_name": "flux1-dev.safetensors"
      },
      "title": "Load Flux Model"
    },
    "3": {
      "class_type": "CLIPTextEncode",
      "inputs": {
        "text": ["1", 0],
        "clip": ["2", 1]
      },
      "title": "Encode Cinematic Prompt"
    },
    "4": {
      "class_type": "StylePromptEncode",
      "inputs": {
        "style_prompt": "{{style_prompt}}",
        "clip": ["2", 1],
        "strength": 0.8
      },
      "title": "Encode Style",
      "description": "Encodes cinematic style prompts (e.g., 'Wong Kar-wai lighting', 'film noir')"
    },
    "5": {
      "class_type": "ConditioningCombine",
      "inputs": {
        "conditioning_1": ["3", 0],
        "conditioning_2": ["4", 0],
        "strength_1": 1.0,
        "strength_2": 0.7
      },
      "title": "Combine Conditions",
      "description": "Combines subject prompt with style conditioning"
    },
    "6": {
      "class_type": "EmptyLatentImage",
      "inputs": {
        "width": 2048,
        "height": 1152,
        "batch_size": 1
      },
      "title": "Create Cinematic Latent",
      "description": "2.35:1 cinematic aspect ratio"
    },
    "7": {
      "class_type": "KSampler",
      "inputs": {
        "seed": "{{seed}}",
        "steps": 50,
        "cfg": 7.5,
        "sampler_name": "euler",
        "scheduler": "normal",
        "denoise": 1.0,
        "model": ["2", 0],
        "positive": ["5", 0],
        "negative": ["8", 0],
        "latent_image": ["6", 0]
      },
      "title": "Sample Cinematic Image"
    },
    "8": {
      "class_type": "CLIPTextEncode",
      "inputs": {
        "text": "flat lighting, harsh shadows, amateur, low quality, oversaturated",
        "clip": ["2", 1]
      },
      "title": "Negative Prompt"
    },
    "9": {
      "class_type": "VAEDecode",
      "inputs": {
        "samples": ["7", 0],
        "vae": ["2", 2]
      },
      "title": "Decode Image"
    },
    "10": {
      "class_type": "CinematicColorGrade",
      "inputs": {
        "image": ["9", 0],
        "look": "{{color_grade_look}}",
        "contrast": 1.1,
        "saturation": 0.95,
        "shadows": 0.9,
        "highlights": 1.05
      },
      "title": "Color Grade",
      "description": "Applies cinematic color grading"
    },
    "11": {
      "class_type": "FilmGrain",
      "inputs": {
        "image": ["10", 0],
        "strength": 0.15,
        "size": 1.0
      },
      "title": "Add Film Grain",
      "description": "Optional film grain for cinematic feel"
    },
    "12": {
      "class_type": "SaveImage",
      "inputs": {
        "filename_prefix": "cinematic",
        "images": ["11", 0]
      },
      "title": "Save Cinematic Image"
    }
  },
  "links": [
    [1, 0, 3, 0],
    [2, 0, 7, 1],
    [2, 1, 3, 1],
    [2, 1, 4, 1],
    [2, 1, 8, 1],
    [2, 2, 9, 1],
    [3, 0, 5, 0],
    [4, 0, 5, 1],
    [5, 0, 7, 6],
    [6, 0, 7, 7],
    [7, 0, 9, 0],
    [9, 0, 10, 0],
    [10, 0, 11, 0],
    [11, 0, 12, 0]
  ],
  "extra": {
    "ds": {
      "scale": 0.85,
      "offset": [0, 0]
    }
  },
  "metadata": {
    "cinematic_features": [
      "atmosphere_control",
      "mood_lighting",
      "style_prompts",
      "color_grading",
      "film_grain"
    ],
    "supported_styles": [
      "Wong Kar-wai",
      "film noir",
      "golden hour",
      "blue hour",
      "dramatic",
      "soft romantic"
    ]
  }
}
