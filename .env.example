# Environment Configuration
ENV=development

# Bria API Tokens (use appropriate token based on ENV)
BRIA_API_TOKEN=
BRIA_API_TOKEN_STAGING=
BRIA_API_TOKEN_PROD=

# Bria API Configuration
BRIA_API_URL=https://engine.prod.bria-api.com/v2

# ComfyUI Configuration (optional)
COMFYUI_URL=
COMFYUI_API_KEY=

# MCP Server Configuration (optional)
MCP_SERVER_URL=
MCP_API_KEY=

# Lovable Token (optional)
LOVABLE_TOKEN=

# Application Settings
APP_NAME=ProLight AI
APP_VERSION=1.0.0
DEBUG=false

# API Configuration
API_PREFIX=/api
HOST=0.0.0.0
PORT=8000
RELOAD=true

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000,http://localhost:8000

# Mock Mode (set to false to use real FIBO API)
USE_MOCK_FIBO=true

# Image Generation Defaults
MAX_IMAGE_RESOLUTION=4096
DEFAULT_IMAGE_RESOLUTION=2048
DEFAULT_STEPS=40
DEFAULT_GUIDANCE_SCALE=7.5
COST_PER_GENERATION=0.04

# Database
DATABASE_URL=sqlite:///./prolight.db

# Gemini API (for VLM processing, optional)
GEMINI_API_KEY=
