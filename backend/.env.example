# ProLight AI Backend Configuration

# Application
APP_NAME=ProLight AI
APP_VERSION=1.0.0
DEBUG=False

# API Configuration
API_PREFIX=/api
API_TITLE=ProLight AI API
API_DESCRIPTION=Professional lighting simulator powered by FIBO

# FIBO Configuration
FIBO_API_URL=https://api.bria.ai/v1/models/fibo
FIBO_API_KEY=your_fibo_api_key_here
USE_MOCK_FIBO=True

# Gemini Configuration (for natural language processing)
GEMINI_API_KEY=your_gemini_api_key_here

# Database
DATABASE_URL=sqlite:///./prolight.db

# CORS
CORS_ORIGINS=["http://localhost:5173","http://localhost:3000","http://localhost:8000"]

# Image Generation
MAX_IMAGE_RESOLUTION=4096
DEFAULT_IMAGE_RESOLUTION=2048
COST_PER_GENERATION=0.04

# Rendering
DEFAULT_STEPS=40
DEFAULT_GUIDANCE_SCALE=7.5

# Server
HOST=0.0.0.0
PORT=8000
RELOAD=True
